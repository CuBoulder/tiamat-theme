{{ attach_library('boulder_base/trusted-share-button') }}

<div class="trusted-content-wrapper">
  <div class="container">
    <h1>Discover Content</h1>
    <p>Discover content to share on your Web Express site. Filter to find quality content you like, copy the link and place into a Syndicated CU Content block to share!</p>
  </div>

  {# Exposed filters (form) #}
  {% if exposed %}
    <div class="trusted-content-filters container">
      {{ exposed }}
    </div>
  {% endif %}

  {# View header (optional) #}
  {% if header %}
    <div class="view-header">
      {{ header }}
    </div>
  {% endif %}

  {# Results (cards), rendered via views-view-fields--*.html.twig #}
  {% if rows %}
    <div class="trusted-content-cards">
      {{ rows }}
    </div>
  {% elseif empty %}
    <div class="no-results">
      {{ empty }}
    </div>
  {% endif %}

  {# Pager (optional) #}
  {% if pager %}
    <div class="pagination">
      {{ pager }}
    </div>
  {% endif %}

</div>
