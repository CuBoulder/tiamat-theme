{#
/**
 * Theme layout to display a Form Page.
 *
 */
#}

{{ attach_library('boulderD9_base/ucb-form-page') }}

{%
  set classes = [
  'node',
  'node--type-' ~ node.bundle|clean_class,
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
]
%}

{% set sidebar_position = drupal_config('ucb2021_base.settings', 'ucb_sidebar_position') %}

<article{{attributes.addClass(classes)}}>
	{{ drupal_block('system_breadcrumb_block') }}

	<div class="container">
		<h1{{title_attributes}}>
			{{ label }}
		</h1>
	</div>

	<div class="container mb-4">
		<div class="row">
			<div class="col-sm-8">
				{{ content.body }}
				<div class="form-page-webform">
					{{ content.field_form_page_webform }}
				</div>
			</div>
		</div>
	</div>
</article>
