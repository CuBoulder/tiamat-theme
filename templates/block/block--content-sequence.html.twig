{% set entity = content['#block_content'] %}
{% if entity.field_content_sequence_display.0.value == 'advanced' %}{% include '@boulderD9_base/block/block--content-sequence-advanced.html.twig' %}{% else %}
{% set classes = [
	'container',
	'block',
	'block-' ~ configuration.provider|clean_class,
	'block-' ~ plugin_id|clean_class,
	bundle ? 'block--type-' ~ bundle|clean_class,
	view_mode ? 'block--view-mode-' ~ view_mode|clean_class
] %}
<div{{ attributes.addClass(classes) }}>
	{{ title_prefix }}
	{% if label %}<h2{{ title_attributes }}>{{ label }}</h2>{% endif %}
	{{ title_suffix }}
	{# TODO: Work for the horizontal and vertical display modes goes here #}
</div>
{% endif %}
