{#
/**
 * @file Contains the template to display an Aggregator Feed block.
 */
#}
{% set classes = [
  'container',
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
  'bs-background-unstyled',
  'bs-background-none',
  'bs-title-scale-default',
  'bs-content-scale-default',
  'bs-heading-align-default'
] %}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    {{ attach_library('boulder_base/aggregator-feed-block') }}
    {{ content.list }}
    <a{{ create_attribute({ href: content.more_link['#url'].options.entity.url.value, class: 'rss-site-link' }) }}>
      <span class="rss-icon"><i class="fa-solid fa-square-rss"></i></span> {{ content.more_link['#url'].options.entity.title.value }}
    </a>
  {% endblock %}
</div>
