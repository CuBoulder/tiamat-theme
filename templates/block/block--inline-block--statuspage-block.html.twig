{{ attach_library('boulderD9_base/ucb-status-page') }}

{%
  set classes = [
    'block',
    'container',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    bundle ? 'block--type-' ~ bundle|clean_class,
    view_mode ? 'block--view-mode-' ~ view_mode|clean_class,
]
%}

<div{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  <h2{{title_attributes}}>
    {{ label }}
  </h2>
  {{ title_suffix }}
  <h4>I am here: {{content.field_ucb_statuspage_id|render|striptags|trim|lower}}</h4>
    <status-page-block page-id="{{content.field_ucb_statuspage_id|render|striptags|trim|lower}}"></status-page-block>
      {# <slate-form slateId="{{content.field_ucb_statuspage_id|render|striptags|trim|lower}}" slateDomain="{{content.field_ucb_slate_form_domain.0['#url']}}"></slate-form> #}
	</div>