{#
/**
 * @file Contains the template to display the Slate Form block.
 */
#}
{% set classes = [
  'block',
  'container',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
  bundle ? 'block--type-' ~ bundle|clean_class,
  view_mode ? 'block--view-mode-' ~ view_mode|clean_class
] %}

{% extends '@boulder_base/block/styled-block.html.twig' %}
{% block content %}
  {{ attach_library('boulder_base/ucb-slate-form') }}
  <slate-form slateid="{{ content.field_ucb_slate_form_id|render|striptags|trim|lower }}" slatedomain="{{ content.field_ucb_slate_form_domain.0['#url'] }}"></slate-form>
{% endblock %}
