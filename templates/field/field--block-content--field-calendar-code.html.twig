{% for item in items %}
	{% if ('text/javascript' in item.content['#context'].value|render) and ('src="https://calendar.colorado.edu/widget' in item.content['#context'].value|render) %}
		
        {% set calendarCode = item.content['#context'].value|render|split('</script>') %}
        {% set calendarCode = calendarCode.0 ~ '</script>' %}
        
        {% set calendarCode = {
            '#type': 'processed_text',
            '#text':  calendarCode,
            '#format': 'full_html',
        } %}

        {{ calendarCode }}

	{% else %}
		<strong>Error: Only calendar.colorado.edu events embed code is allowed.</strong>
	{% endif %}
{% endfor %}