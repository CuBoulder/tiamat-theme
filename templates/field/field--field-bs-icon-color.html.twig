{% for item in items %}
	{% if item|render|striptags|trim == 'Gray' %}
		{% set blockIconColor = 'bs_icon_color_gray' %}
	{% elseif item|render|striptags|trim == 'Gold' %}
		{% set blockIconColor = 'bs_icon_color_gold' %}
	{% elseif item|render|striptags|trim == 'Blue' %}
		{% set blockIconColor = 'bs_icon_color_blue' %}
	{% elseif item|render|striptags|trim == 'Green' %}
		{% set blockIconColor = 'bs_icon_color_green' %}
	{% elseif item|render|striptags|trim == 'Orange' %}
		{% set blockIconColor = 'bs_icon_color_orange' %}
	{% elseif item|render|striptags|trim == 'Purple' %}
		{% set blockIconColor = 'bs_icon_color_purple' %}
	{% elseif item|render|striptags|trim == 'Red' %}
		{% set blockIconColor = 'bs_icon_color_red' %}
	{% elseif item|render|striptags|trim == 'Yellow' %}
		{% set blockIconColor = 'bs_icon_color_yellow' %}
	{% else %}
		{% set blockIconColor = 'bs_icon_color_default' %}
	{% endif %}

    {{ blockIconColor }}
{% endfor %}
