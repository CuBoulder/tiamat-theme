{% for item in items %}
	{% if item|render|striptags|trim == 'Increase' %}
		{% set blockContentScale = 'bs_content_scale_increase' %}
	{% elseif item|render|striptags|trim == 'Decrease' %}
		{% set blockContentScale = 'bs_content_scale_decrease' %}
	{% else %}
		{% set blockContentScale = 'bs_content_scale_default' %}
	{% endif %}

	{{ blockContentScale }}
{% endfor %}
